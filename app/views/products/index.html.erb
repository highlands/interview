<div class="container">
  <% if notice %>
  <div class="row">
    <div class="col-sm-12">
      <div id="notice" class="alert alert-warning"><%= notice %></div>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12">
      <h1>Products</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Upc</th>
            <th>Available on</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.upc %></td>
              <td><%= product.available_on %></td>
              <td><%= link_to 'Show', product %></td>
              <td><%= link_to 'Edit', edit_product_path(product) %></td>
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'New Product', new_product_path %>
    </div>
  </div>


  
</div><!-- container -->
