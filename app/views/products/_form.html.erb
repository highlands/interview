<%= form_with(model: product, local: true) do |form| %>

  <% if product.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field field-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, class: 'form-control' %>
  </div>

  <div class="field field-group">
    <%= form.label :upc %>
    <%= form.text_field :upc, id: :product_upc, class: 'form-control' %>
  </div>

  <div class="field field-group">
    <%= form.label :available_on %>
    <%= form.datetime_select :available_on, id: :product_available_on, class: 'form-control' %>
  </div>


  <%= form.fields_for :product_properties do |product_properties_form| %>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= product_properties_form.label :property_id %>
          <%= product_properties_form.text_field :property_id, class: 'form-control' %>
        </div>
      </div>
      
      <div class="col-sm-6">
        <div class="form-group">
          <%= product_properties_form.label :value %>
          <%= product_properties_form.text_field :value, class: 'form-control' %>
        </div>
      </div>
    
    </div>
  <% end %>


  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>

<% end %>
